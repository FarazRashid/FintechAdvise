<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_home"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="Risk Assessment Form"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            />


        <!-- Personal Information -->
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information:"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nameEditText"
            android:layout_marginTop="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_regular"
            android:textColorHint="@color/text_secondary"

            android:textColor="@color/text_primary"

            android:hint="Name" />

        <EditText
            android:id="@+id/ageEditText"
            android:layout_marginTop="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_regular"
            android:textColorHint="@color/text_secondary"

            android:textColor="@color/text_primary"

            android:hint="Age"
            android:inputType="number" />

        <EditText
            android:id="@+id/occupationEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"

            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"


            android:hint="Occupation" />

        <EditText
            android:id="@+id/incomeEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"

            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"


            android:hint="Annual Income"
            android:inputType="numberDecimal" />

        <!-- Financial Goals -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"

            android:layout_height="wrap_content"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"

            android:text="Financial Goals:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/goalsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"

            android:hint="What are your primary financial goals?"
            />

        <EditText
            android:id="@+id/goalTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"

            android:fontFamily="@font/avenirnext_regular"

            android:hint="When do you plan to achieve these goals?" />

        <!-- Investment Experience -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Investment Experience:"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"

            android:fontFamily="@font/avenirnext_regular"

            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/experienceSpinner"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"

            android:layout_height="40dp"
            android:fontFamily="@font/avenirnext_regular" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risk Perception:"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/goalTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"

            android:fontFamily="@font/avenirnext_regular"/>
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Investment Time Horizon:"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/goalInvestmentTimeSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"

            android:fontFamily="@font/avenirnext_regular" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Financial Stability:"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/financialStabilitySpinner"
            android:fontFamily="@font/avenirnext_regular"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Investment Experience:"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/previousExperience"
            android:fontFamily="@font/avenirnext_regular"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Risk Tolerance Scenario:"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_marginTop="15dp"

            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imagine you invested $10,000 in a stock and within a year, the value dropped by 20%. What would you do?"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/riskToleranceRadioGroup"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell all of the stock"
                android:fontFamily="@font/avenirnext_regular"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sell some of the stock"
                android:fontFamily="@font/avenirnext_regular"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hold on to the stock"
                android:fontFamily="@font/avenirnext_regular"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy more of the stock"
                android:fontFamily="@font/avenirnext_regular"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Comments:"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/additionalCommentsEditText"
            android:fontFamily="@font/avenirnext_regular"
            android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
            android:textColorHint="@color/text_secondary"
            android:hint="Is there anything else you would like to add?"
            />

        <!-- Rest of the form -->
        <Button
            android:id="@+id/submitFormButton"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:backgroundTint="@color/icon_secondary"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Submit your Risk Assessment"
            android:elevation="25dp"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
    </LinearLayout>

</ScrollView>