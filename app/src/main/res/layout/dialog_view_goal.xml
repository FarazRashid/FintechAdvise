<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goalNameLabel"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: " />

        <TextView
            android:id="@+id/goalNameTextView"
            android:layout_width="0dp"
            android:textSize="18sp"

            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goalTypeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="Type: " />

        <TextView
            android:id="@+id/goalTypeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_primary"

            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goalPriorityLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"

            android:text="Priority: " />

        <TextView
            android:id="@+id/goalPriorityTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:textColor="@color/text_primary"

            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goalDateLabel"
            android:layout_width="0dp"
            android:textSize="18sp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Goal Date: " />

        <TextView
            android:id="@+id/goalDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:textColor="@color/text_primary"

            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/currentAmountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:layout_weight="1"
            android:text="Current Amount: " />

        <TextView
            android:id="@+id/currentAmountTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:textColor="@color/text_primary"

            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/goalAmountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"

            android:layout_weight="1"
            android:text="Goal Amount: " />

        <TextView
            android:id="@+id/goalAmountTextView"
            android:layout_width="0dp"
            android:textSize="18sp"

            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"

            android:layout_weight="1" />
    </LinearLayout>

    <!-- Repeat the above LinearLayout for each pair of TextViews -->

</LinearLayout>